@using Model.Entities
@{
    Layout = "_Layout";

    User entity = ViewBag.Entity;
    string elementString = null;
    string action = entity.IsNew ? "add" : "update";
    string controller = null;

    elementString = "user";
    controller = "User";

    ViewData["Title"] = $"{elementString} {action} page";

    string disable = null;
    string disableId = null;
    bool notReadOnly = true;

    switch (action)
    {
        case "delete":
            DisableInput();
            break;
        case "update":
            disableId = "readOnly";
            break;
    }

    // action = char.ToUpper(action[0]) + action.Substring(1);

    void DisableInput()
    {
        disable = "readOnly";
        disableId = "readOnly";
    }
}

<div class="container">
    <div class="col-5">
        <div>
            <input type="hidden" class="form-control"
                   id="elementType" value="@elementString" readOnly />
        </div>
        @if (!action.Equals("add"))
        {
            <div>
                <label class="form-label" for="Id">Id</label>
                <input id="@(elementString)Id" type="number" class="form-control"
                name="Id" value="@entity.Id" @disableId />
            </div>
        }

        <div id="fields">
            <div>
                <label class="form-label" for="FirstName">FirstName</label>
                <input id="@(elementString)FirstName" type="text" class="form-control"
                       name="FirstName" value="@entity.FirstName" @disable />
            </div>
            <div>
                <label class="form-label" for="LastName">LastName</label>
                <input id="@(elementString)LastName" type="text" class="form-control"
                       name="LastName" value="@entity.LastName" @disable />
            </div>
            <div>
                <label class="form-label" for="UserName">UserName</label>
                <input id="@(elementString)UserName" type="text" class="form-control"
                       name="UserName" value="@entity.UserName" @disable />
            </div>
            <div>
                <label class="form-label" for="Password">Password</label>
                <input id="@(elementString)Password" type="password" class="form-control"
                       name="Password" value="@entity.Password" @disable />
            </div>
            <div>
                <label class="form-label" for="AccountId">AccountId</label>
                <input id="@(elementString)AccountId" type="number" class="form-control"
                       name="AccountId" value="@(entity == null ? "" : entity.AccountId)" @disable />
            </div>
        </div>
        
        
        <div class="d-flex justify-content-between mt-1">
            <div>
                <a class="btn bg-success" href="~/@controller/Index">Back</a>
            </div>

            @if (notReadOnly)
            {
                <div>
                    <button id="action-button" class="btn bg-danger @action" onclick="saveUser()">@action</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user.js" asp-append-version="true"></script>
    <script src="~/js/common.js" asp-append-version="true"></script>
}